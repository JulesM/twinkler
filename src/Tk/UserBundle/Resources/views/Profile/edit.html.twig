{% extends 'TkUserBundle:Profile:show.html.twig' %}

{% block profile %}

	<form action="{{ path('tk_user_profile_edit', { 'id' : app.user.id }) }}" method="post" {{ form_enctype(form) }}>
	    {{ form_errors(form) }}

	    {{ form_row(form.firstname) }}
	    {{ form_row(form.lastname) }}
	    {{ form_row(form.email) }}
	    {{ form_row(form.nationality) }}
	    {{ form_row(form.city) }}
	    {{ form_row(form.country) }}

	    {{ form_rest(form) }}

	    <input type="submit" />
	    <a href="{{ path('tk_user_homepage') }}">Cancel</a>
	</form>

{% endblock %}