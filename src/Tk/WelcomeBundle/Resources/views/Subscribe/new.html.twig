<form action="{{ path('tk_welcome_subscribe') }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}

    {{ form_errors(form.email) }}
    {{ form_widget(form.email, 
            { 'attr': { 'placeholder' : 'Enter your email here'}}) 
	}}

    {{ form_rest(form) }}

    <br><input class="btn btn-success" type="submit" style="vertical-align:top"/>
</form>