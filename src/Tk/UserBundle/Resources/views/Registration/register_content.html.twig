{% trans_default_domain 'FOSUserBundle' %}
<h1>Register to Twinkler</h1>
<p>{{ facebook_login_button({'autologoutlink': false, 'label': 'Connect with Facebook'}) }}</p>
<p>or using your email</p>

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {{ form_widget(form) }}
    <div>
        <input class="btn" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
</form>

<p>Already a user ? <a href="{{ path('fos_user_security_login') }}">Login here</a></p>