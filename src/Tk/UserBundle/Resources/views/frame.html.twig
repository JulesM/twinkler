{% extends '::base.html.twig' %}

{% block head %}
    {% block title %}   
    <title>Twinkler - Manage social events</title>
    {% endblock %}
    {% block stylesheets %} 
    <link href="{{ asset('css/frame.css') }}" rel="stylesheet" type="text/css">
    {% endblock stylesheets %}
{% endblock %}

{% block body %}
    <header style="border-bottom: solid 1px">
        <div class="container">
            <div class="row">
                <div class="span2">
                    <a class="brand" href="{{ path('tk_user_homepage') }}"><img src="{{ asset('img/logo/twinkler_logo.png') }}" width="50px" alt="twinkler logo"></a>
                    <a href="{{ path('tk_group_new') }}">Start a new group</a>
                </div>
                <div class="span8">
                </div>
                <div class="span2">
                    <a href="{{ path('tk_user_homepage') }}"><img src="{{ asset(app.user.picture.path) }}" class="img-circle" width="20px" style="margin-right: 10px;" alt="profile picture">{{ app.user.username }}</a>
                    <a href="{{ path('fos_user_security_logout') }}">Logout</a>
                </div>
            </div>
        </div>
        {% block header %}
        {% endblock %}
    </header>

    <section class="frame">
        <div class="container">

            {% block content %}
            {% endblock %}

        </div>
    </section>
{% endblock %}
